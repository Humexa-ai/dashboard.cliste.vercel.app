# Supabase Database
# Get these from https://supabase.com
# Create a new project and copy your keys
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# STRIPE CONFIGURATION
# ============================================
# Get these from https://dashboard.stripe.com/apikeys
# Toggle "Viewing test data" to OFF for production keys

# Required: Stripe Secret Key (Backend API calls)
# Test: sk_test_... | Production: sk_live_...
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Required for client-side Stripe (if using Stripe.js)
# Test: pk_test_... | Production: pk_live_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Billing Portal Configuration ID
# Create at https://dashboard.stripe.com/settings/billing/portal
# Test: bpc_test_... | Production: bpc_...
STRIPE_PORTAL_CONFIGURATION_ID=bpc_your_config_id

# Price IDs for each subscription tier
# Get from Stripe Dashboard → Products → [Your Product] → Pricing
# Starter Plan: €300/mo - Chatbots only
NEXT_PUBLIC_STRIPE_STARTER_PRICE_ID=price_starter_id_here

# Pro Plan: €500/mo - Chatbots + Voice AI
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID=price_pro_id_here

# Enterprise Plan: Custom pricing - Extended usage
NEXT_PUBLIC_STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_id_here

# Optional: Webhook signing secret (for handling Stripe events)
# Get from https://dashboard.stripe.com/webhooks
# Test: whsec_test_... | Production: whsec_...
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Optional: Default price ID for checkout fallback
STRIPE_DEFAULT_PRICE_ID=price_your_default_price_id

